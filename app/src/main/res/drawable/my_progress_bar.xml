<?xml version="1.0" encoding="utf-8"?>

<animated-rotate xmlns:android="http://schemas.android.com/apk/res/android"
                 android:pivotX="50%"
                 android:pivotY="50%">

    <shape
        android:innerRadiusRatio="4"
        android:shape="ring"
        android:thicknessRatio="7"
        android:useLevel="false">
        <size
            android:width="18dip"
            android:height="18dip"/>

        <gradient
            android:centerColor="#8866ccb3"
            android:endColor="#828686"
            android:startColor="#937a8d"
            android:type="sweep"/>
    </shape>

</animated-rotate>