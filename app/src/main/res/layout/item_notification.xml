<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_margin_1"
    android:paddingRight="@dimen/padding_margin_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_notification_new_sender_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="@integer/max_login_length"
            android:paddingLeft="@dimen/padding_margin_0"
            android:paddingRight="@dimen/padding_margin_0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/text_size_2"/>

        <TextView
            android:id="@+id/item_notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLength="@integer/max_time_length"
            android:paddingLeft="@dimen/padding_margin_0"
            android:paddingRight="@dimen/padding_margin_0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/text_size_2"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_notification_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="@dimen/padding_margin_1"
        android:paddingRight="@dimen/padding_margin_1"
        android:textColor="@android:color/holo_green_light"
        android:textSize="@dimen/text_size_3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/background_dark"/>

</LinearLayout>